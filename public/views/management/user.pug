extends ../common/layout

block content
  .row.app.justify-content-md-center(v-cloak)
    .col-sm-12.col-lg-8.text-right
      button.btn.btn-info(type="button") add row
    .col-sm-12.col-lg-8
      table.table.table-sm.table-striped
        thead.table-dark
          tr
            th(scope="col") #
            th(scope="col") username
            th(scope="col") email
            th(scope="col") cellPhone
            th(scope="col", colspan=2, v-show="isOwner") feature
        tbody
          tr(v-for="user, index in users")
            th(scope="row") {{index+1}}
            td.text-truncate {{user.username}}
            td.text-truncate {{user.email}}
            td.text-truncate {{user.cellPhone}}
            td(v-show="isOwner")
              button.btn.btn-success.btn-block(type="button", @click="update") 更新資料
            td(v-show="isOwner")
              button.btn.btn-danger.btn-block(type="button", @click="reset") 重設密碼
  script(src="/js/management/user.min.js")