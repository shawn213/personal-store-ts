.cart(v-show="show", v-cloak)
  .cart-icon(@click="isShowList")
    i.action-click(class="fas fa-shopping-cart fa-2x", v-bind:data-count="count")
  .cart-detail(v-show="isShow")
    div(v-for="item,index in items", @click="removeItem(index)")
      img.action-click(:src="item.link", class="img-fluid")
      div {{item.name}} {{item.type}} x {{item.count}}
    .row
      .col.text-right
        a.text-decoration-none(v-show="isCheckout", href="/checkout") {{$t('__html.btn.checkout'/*結帳*/)}}
script(src="/js/common/cart.min.js")