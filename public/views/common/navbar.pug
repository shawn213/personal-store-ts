block navbar
  nav#navbar(class="navbar fixed-top navbar-expand-md navbar-dark bg-info")
    a(class="navbar-brand" href="/") #{__('__home')}
    button(type="button", class="navbar-toggler", data-toggle="collapse", data-target="#collapsibleNavbar")
      span(class="navbar-toggler-icon")
    div(class="collapse navbar-collapse", id="collapsibleNavbar")
      ul(class="navbar-nav mr-auto")
        li(class="nav-item dropdown", v-if="auth > 0")
          a(class="nav-link dropdown-toggle", href="#", id="navbarDropdown", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") #{__('__management')}
          div(class="dropdown-menu", aria-labelledby="navbarDropdownMenuLink")
            a(class="dropdown-item", href="/product") {{$t('__menu.management.product'/*登入商品*/)}}
            a.dropdown-item(href="/user") {{$t('__menu.management.user'/*管理客戶*/)}}
      ul(class="navbar-nav")
        li.dropdown.nav-item
          i.nav-link(class="far fa-user fa-2x", style="color: white", data-toggle="dropdown")
          .dropdown-menu.dropdown-menu-right(aria-labelledby="dropdownMenuButton")
            a.dropdown-item(v-show="isLogin") {{$t('__menu.user.productList'/*訂單查詢*/)}}
            a.dropdown-item(href="/login", v-show="!isLogin") {{$t('__menu.user.login'/*登入/註冊*/)}}
            a.dropdown-item(@click="logout", v-show="isLogin") {{$t('__menu.user.logout'/*登出*/)}}
  script(src="/js/common/navbar.min.js")